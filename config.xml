<?xml version='1.0' encoding='utf-8'?>
<widget id="com.terruss.freefreecivcompanion" version="0.3.0">
    <name>FreeFreeCiv Companion</name>
    <icon src="res/icon/icon.png" />
    <description>
        A companion app for the great game FreeFreeCiv.
    </description>
    <author email="aveto.sofwares@gmail.com">
        Arveto Ink.
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <access origin="*/codeanyapp.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="port-xhdpi" src="res/screen/splash.png" />
    </platform>
    <preference name="SplashScreenDelay" value="2000" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^8.0.0">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <engine name="android" spec="^7.1.0" />
</widget>
